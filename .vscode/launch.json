    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--reporter",
                "dot",
                "--slow",
                "5000",
                "--colors",
                "${workspaceFolder}/packages/gatsby-source-yuque/__tests__/**/download.test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}